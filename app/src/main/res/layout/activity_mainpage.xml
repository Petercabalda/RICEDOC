    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_below="@+id/textlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#EDEDED"
        android:contentDescription="@string/imagedisplay" />

    <ImageView
        android:id="@+id/textlogo"
        android:layout_width="290dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/textlogo"
        app:srcCompat="@drawable/ricedoc_textf" />


    <ImageView
        android:id="@+id/infoimage"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/infoimage" />

    <!-- CameraButton -->
     <ImageButton
         android:id="@+id/captureBtn"
         android:layout_width="170dp"
         android:layout_height="60dp"
         android:layout_below="@+id/infoimage"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="0dp"
         android:layout_marginBottom="0dp"
         android:backgroundTint="#00FFFFFF"
         android:contentDescription="@string/capture"
         android:cropToPadding="false"
         android:scaleType="fitCenter"
         android:text="Capture"
         android:textColor="#FFFFFF"
         app:srcCompat="@drawable/capture_button"
         tools:srcCompat="@drawable/capture_button" />

     <!-- Gallery Button -->
        <ImageButton
            android:id="@+id/galleryBtn"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_below="@+id/captureBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/gallery"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/gallery_button"
            tools:srcCompat="@drawable/gallery_button" />

        <!-- Predict Button -->
        <ImageButton
            android:id="@+id/predictBtn"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_below="@+id/galleryBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/predict"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/predict_button"
            tools:srcCompat="@drawable/predict_button" />



</RelativeLayout>